<%= render "layouts/mobileheader" %>
<div class="row">
   <div class="col-lg-2">
      <%= render "layouts/header" %>
   </div>
   <div class="col-lg-10" style="text-align: center">
          <a class="carousel-control-prev" href="" role="button" data-slide="prev" style="margin-left: 5%">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="" role="button" data-slide="next" style="margin-right: 5%">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      <img src="<%= @picture.url%>" style="padding: 3% 7%" width="95%"> 
  </div>
</div>

<script type="text/javascript">
$(document).ready(function()
{
  <% id = @picture.id %>
  <% previd = id-1 %>
  <% nextid = id+1 %>
  <% if previd==0 %>
  <% previd = Picture.all.length %>
  <% elsif nextid == Picture.all.length+1 %>
  <% nextid = 1 %>
  <% end %>
  $('.carousel-control-next').attr("href", "<%= "/pictures/#{nextid}" %>")
  $('.carousel-control-prev').attr("href", "<%= "/pictures/#{previd}" %>")
});
</script>


